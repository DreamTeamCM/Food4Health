<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.food4health.presentation.Favourite.View.FavouriteActivity">

    <include
        layout="@layout/layout_headder_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/favourite_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AVLoadingIndicatorView.Large"
                android:visibility="gone"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                app:indicatorName="PacmanIndicator"
                app:indicatorColor="@color/colorBlue" />

            <LinearLayout
                android:id="@+id/favourite_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


